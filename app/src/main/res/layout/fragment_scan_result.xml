<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Scan.ScanResultFragment"
    android:background="@color/primary">
    
    <TextView
        android:id="@+id/content_header_scan_result"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/content_header_scan_result"
        android:textColor="@color/neutral_5"
        android:paddingHorizontal="16dp"
        android:textSize="20dp"
        android:fontFamily="@font/inter_bold"
        android:paddingTop="14dp"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/btn_favourite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/second_back_ground"
        app:layout_constraintEnd_toEndOf="@+id/content_header_scan_result"
        app:layout_constraintTop_toTopOf="@id/content_header_scan_result"
        app:layout_constraintBottom_toBottomOf="@id/content_header_scan_result"
        android:layout_marginEnd="56dp"
        android:src="@drawable/ic_favorite" />

    <ImageView
        android:id="@+id/btn_back_to_scan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/second_back_ground"
        app:layout_constraintEnd_toEndOf="@+id/content_header_scan_result"
        app:layout_constraintTop_toTopOf="@id/content_header_scan_result"
        app:layout_constraintBottom_toBottomOf="@id/content_header_scan_result"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_back_to_scan" />

    <FrameLayout
        android:id="@+id/qr_result_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scan_result_body_bg"
        app:layout_constraintTop_toBottomOf="@id/content_header_scan_result"
        >
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_qr_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/qr_result_view"
        android:paddingTop="160dp">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>