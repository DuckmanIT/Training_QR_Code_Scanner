<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.create_qr.utilities.CreateQrCalendarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/createQRIconType"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:src="@drawable/ic_category_calendar"
                android:layout_marginVertical="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/createQRCalendarTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/please_enter_event_title"
                    android:background="@drawable/edit_text_rounded"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:textColorHint="@color/neutral_3"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"
                    android:textCursorDrawable="@drawable/color_cursor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/all_day"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_1"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/createQRCalendarSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:trackTint="@color/switch_track_selector"
                        app:thumbTint="@color/switch_thumb_selector"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/createQRCalendarStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button_r16_bg_white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_1"/>

                    <TextView
                        android:id="@+id/createQRCalendarStartText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:text="@string/mar_13_2024_14_00"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="14sp"
                        android:textColor="@color/primary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/createQRCalendarEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_button_r16_bg_white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_1"/>

                    <TextView
                        android:id="@+id/createQRCalendarEndText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:text="@string/mar_13_2024_14_00"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="14sp"
                        android:textColor="@color/primary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/createQRCalendarDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="96dp"
                    android:hint="@string/please_fill_in_the_content"
                    android:background="@drawable/edit_text_rounded"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:textColorHint="@color/neutral_3"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"
                    android:singleLine="false"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:maxLength="2000"
                    android:maxLines="4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/createQRCalendarCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:textAlignment="center"
        android:layout_marginBottom="72dp"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="12dp"
        android:fontFamily="@font/inter_extrabold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/primary_button_r32_primary_disable"/>

</LinearLayout>