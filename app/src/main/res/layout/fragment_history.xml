<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="24dp"
    android:background="@color/primary_bg">
    <LinearLayout
        android:id="@+id/historyAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="14dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/neutral_1"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/historyDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/historyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/historyAppbar"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">
        <TextView
            android:id="@+id/historyFilterScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scan"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:textAlignment="center"
            android:background="@drawable/primary_button_r20"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/historyFilterCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14sp"
            android:textColor="@color/neutral_2"
            android:paddingVertical="10dp"
            android:layout_marginStart="4dp"
            android:textAlignment="center"
            android:background="@drawable/primary_button_r20_bg_white"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/historyFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/fragment_home_history_item"
        tools:itemCount="10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:id="@+id/historyContentEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/historyFilter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history_empty"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_history"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14sp"
            android:textColor="@color/neutral_3"
            android:layout_marginVertical="16dp"/>
        <TextView
            android:id="@+id/historyContentEmptyAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_now"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingHorizontal="54.5dp"
            android:paddingVertical="12dp"
            android:background="@drawable/primary_button_r24"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>