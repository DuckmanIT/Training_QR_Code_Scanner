<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.language.SelectLanguageFragment">

        <TextView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/inter_bold"
            android:paddingHorizontal="16dp"
            android:paddingTop="14dp"
            android:text="@string/language"
            android:textColor="@color/language_color"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnOKLanguage"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/second_back_ground"
            android:paddingHorizontal="16.5dp"
            android:paddingVertical="8dp"
            android:src="@drawable/tick_icon"
            app:layout_constraintBottom_toBottomOf="@id/language"
            app:layout_constraintEnd_toEndOf="@+id/language"
            app:layout_constraintTop_toTopOf="@id/language" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/language"
            tools:itemCount="24"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/language_item"
            tools:spanCount="2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

