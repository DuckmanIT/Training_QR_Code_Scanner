<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    tools:context=".presentation.create_qr.personal.CreatePersonalQrFragment">

    <LinearLayout
        android:id="@+id/createQRResultAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"

        android:paddingTop="24dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/createQRResultAppbarBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/result"
            android:fontFamily="@font/inter_bold"
            android:textSize="20sp"
            android:textColor="@color/neutral_1"/>
        <TextView
            android:id="@+id/createQRResultAppbarDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/primary_button_r16"
            android:layout_marginEnd="16dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/createQRResultAppbar"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/primary_button_r16_bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="2dp">
            <ImageView
                android:id="@+id/createQRResultIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category_website"
                android:paddingEnd="16dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/createQRResultTypeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/website"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"/>
                <TextView
                    android:id="@+id/createQRResultTypeContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/http_mvot_vn_qrcode"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="16sp"
                    android:textColor="@color/neutral_1"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/createQRResultImage"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:padding="16dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="32dp"
            android:background="@drawable/border_image"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_style"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/primary"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_design"
            android:drawablePadding="8dp"
            android:background="@drawable/primary_button_r32_primary_disable"
            android:paddingHorizontal="25.5dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/createQRResultSaveImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_create_save"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save image"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createQRResultShareContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_email"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createQRResultShareQR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_share_qr" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_qr"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>