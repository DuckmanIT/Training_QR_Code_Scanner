<?xml version="1.0" encoding="utf-8"?>
<layout>
        <data>
            <variable
                name="viewModel"
                type="com.example.qr_test.presentation.scan_qr.image.ScanImportImageViewModel" />
        </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:background="@color/white"
        tools:context=".presentation.scan_qr.image.ScanImportImageFragment">

        <LinearLayout
            android:id="@+id/scanImportImageAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/backScanImportImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_tab"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/scanImportImageFilterFolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_photos"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/neutral_1"
                    app:drawableEndCompat="@drawable/ic_arrow"
                    android:drawablePadding="8dp"
                    android:background="@drawable/primary_button_r20_grey"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/scanImportImageShimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scanImportImageAppbar">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scanImportImageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:itemCount="10"
                app:spanCount="3"
                android:paddingHorizontal="12dp"
                android:paddingBottom="?attr/actionBarSize"
                android:paddingTop="8dp"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>