<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment2">

    <fragment
        android:id="@+id/splashFragment2"
        android:name="com.example.qr_test.presentation.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment2_to_selectLanguageFragment"
            app:destination="@id/selectLanguageFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectLanguageFragment"
        android:name="com.example.qr_test.presentation.language.SelectLanguageFragment"
        android:label="SelectLanguageFragment" >
        <action
            android:id="@+id/action_selectLanguageFragment_to_introFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.qr_test.presentation.intro.IntroFragment"
        android:label="IntroFragment" >
        <action
            android:id="@+id/action_introFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.qr_test.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_scanResultFragment"
            app:destination="@id/scanResultFragment" />
        <action
            android:id="@+id/action_homeFragment_to_scanImportImageFragment"
            app:destination="@id/scanImportImageFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment2"
            app:destination="@id/historyFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_createPersonalQrFragment"
            app:destination="@id/createPersonalQrFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment2"
        android:name="com.example.qr_test.presentation.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/settingsFragment2"
        android:name="com.example.qr_test.presentation.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/scanImportImageFragment"
        android:name="com.example.qr_test.presentation.scan_qr.image.ScanImportImageFragment"
        android:label="ScanImportImageFragment" />
    <fragment
        android:id="@+id/scanResultFragment"
        android:name="com.example.qr_test.presentation.scan_qr.qr.ScanResultFragment"
        android:label="fragment_scan_result"
        tools:layout="@layout/fragment_scan_result" />
    <fragment
        android:id="@+id/createPersonalQrFragment"
        android:name="com.example.qr_test.presentation.create_qr.personal.CreatePersonalQrFragment"
        android:label="fragment_create_personal_qr"
        tools:layout="@layout/fragment_create_personal_qr" >
        <action
            android:id="@+id/action_createPersonalQrFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_createPersonalQrFragment_to_createQRResultFragment"
            app:destination="@id/createQRResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/createQRResultFragment"
        android:name="com.example.qr_test.presentation.create_qr.CreateQRResultFragment"
        android:label="CreateQRResultFragment" />

</navigation>