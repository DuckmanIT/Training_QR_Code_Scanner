<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="280dp"
        android:height="280dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/>
        </shape>
    </item>

    <item
        android:width="20dp"
        android:height="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:width="3dp"
        android:height="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:width="20dp"
        android:height="3dp"
        android:gravity="right">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:width="3dp"
        android:height="20dp"
        android:gravity="right">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>


    <item
        android:width="20dp"
        android:height="3dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:width="3dp"
        android:height="20dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:width="20dp"
        android:height="3dp"
        android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item
        android:width="3dp"
        android:height="20dp"
        android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</layer-list>
